#!/usr/local/bin/bash
#
if [ $# -eq 2 ]
then
	echo "-------------------------------------start-------------------------------------"
	if [ $1 = "all" ]
	then
		find . -name "*" | xargs grep -n --color=auto "$2"
	else
		#find . -name "*$1" | xargs grep --color=auto "$2"
		gfind . -path '*/.svn' -prune -o -type f -name "*.$1" | xargs grep -n "$2" # -A2 -B4
	fi
	echo "------------------------------------- end -------------------------------------"
else
	echo "fs filetype content"
fi
